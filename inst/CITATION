  entry='Article',
  title = 'Exploring thematic structure in 16S rRNA marker gene surveys',
  author = personList(as.person('Stephen Woloszynek'),
                      as.person('Joshua Chang Mell'),
                      as.person('Gideon Simpson'),
                      as.person('Gail L. Rosen')),
